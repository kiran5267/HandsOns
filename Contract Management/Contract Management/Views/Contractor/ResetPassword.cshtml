
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password UserID</title>
    <link rel="stylesheet" href="/Content/bootstrap.css">
    <link rel="icon" href="/images/logo.jpg" />
    <style>
        body {
            background: linear-gradient( rgba(255, 255, 255, 0.9) 100%, rgba(255, 255, 255, 0.5) 100%),url('/images/bg.png');
            background-size: 100% 100%;
        }
    </style>
</head>
<body style="height: 100vh;">
    <div class="jumbotron p-3 mb-2 rounded-0 bg-transparent text-dark text-center shadow">
        <h4 class="text-center ml-5" style="text-shadow:2px 2px 2px white;">Tendor System</h4>
        <h5 class="text-center text-uppercase" style="text-shadow:2px 2px 2px white;">Reset Password</h5>
    </div>
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 mx-auto shadow p-2">
                    <div class="form-group">
                        <label>User Id</label>
                        <input type="text" readonly name="userid" value="@TempData["userid"]" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" required name="pwd" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Repeat Password</label>
                        <input type="password" required name="cpwd" class="form-control" />
                    </div>
                    <input type="submit" value="Create Password" class="btn btn-primary" />                    
                </div>

            </div>
        </div>
    </form>
</body>
</html>
