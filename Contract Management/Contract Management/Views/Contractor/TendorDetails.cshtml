@model Contract_Management.tender

@{
    ViewBag.Title = "TendorDetails";
}

<h4 class="p-2">Tendor Details</h4>

<div class="card shadow">
    <table class="table">
        <tr>
            <th style="width:200px;">
                @Html.DisplayNameFor(model => model.tid)
            </th>

            <td>
                @Html.DisplayFor(model => model.tid)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.ttype)
            </th>

            <td>
                @Html.DisplayFor(model => model.ttype)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tdate)
            </th>

            <td>
                @Html.DisplayFor(model => model.tdate)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.minquote)
            </th>

            <td>
                @Html.DisplayFor(model => model.minquote)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>

            <td>
                @Html.DisplayFor(model => model.title)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.duedate)
            </th>

            <td>
                @Html.DisplayFor(model => model.duedate)
            </td>
        </tr>

        <tr>
            <th> @Html.DisplayNameFor(model => model.description)</th>
            <td colspan="3">
                @Html.DisplayFor(model => model.description)
            </td>
        </tr>
    </table>
    @if (Model.status != "Closed")
    {
<form method="post" enctype="multipart/form-data" action="/applytendor">
    <div class="row my-2">
        <div class="col-sm-4 mx-auto">
            <div class="form-group">
                <label>Bid Amount</label>
                <input type="text" name="bidamount" class="form-control" />
            </div>
            <div class="form-group">
                <label>Document</label>
                <input type="file" name="docs" class="form-control" />
            </div>
            <input type="hidden" name="tid" value="@Model.tid" />
            
            <input type="submit" value="Apply for Tender" class="btn btn-primary" />
        </div>
    </div>
</form>
    }
    else
    {
        <h4 class="text-center">Tender Closed</h4>
    }

</div>
