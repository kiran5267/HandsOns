
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/Content/bootstrap.css">
    <link rel="icon" href="/images/logo.jpg" />
    <style>
        body {
            background: linear-gradient( rgba(255, 255, 255, 0.9) 100%, rgba(255, 255, 255, 0.5) 100%),url('/images/bg.png');
            background-size: 100% 100%;
        }
    </style>
</head>
<body style="height: 100vh;">
    <div class="jumbotron p-3 mb-2 rounded-0 bg-transparent text-dark text-center shadow">
        <h4 class="text-center" style="text-shadow:2px 2px 2px white;">Tendor System</h4>
        <h5 class="text-center" style="text-shadow:2px 2px 2px white;">Forgot Password</h5>
    </div>
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 mx-auto shadow p-2">
                    <div class="form-group">
                        <label>User ID</label>
                        <input type="text" name="userid" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Contact Number</label>
                        <input maxlength="10" type="text" name="phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email Id</label>
                        <input type="text" name="email" class="form-control" />
                    </div>

                    <input type="submit" value="Show Me" class="btn btn-primary" />
                    @if (TempData["error"] != null)
                    {
                        <p class="font-weight-bold text-danger">@TempData["error"]</p>
                    }                    
                </div>
            </div>
        </div>
    </form>
</body>
</html>
